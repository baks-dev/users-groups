{% trans_default_domain 'groups.group' %}

<ul class="nav nav-pills gap-3 mb-3" id="nav-tab_main">
	<li class="nav-item" role="presentation">
		<button class="btn fw-bolder nav-link active"
				data-bs-toggle="tab"
				type="button"
				role="tab"
				aria-selected="true"
				
				id="tab_main-tab"
				data-bs-target="#tab_main"
				aria-controls="nav-tab_main"
		>
			<small class="text-uppercase px-3">
				{# Группа #}
				{{ 'admin.group.form.tabs.group'|trans }}
			</small>
		</button>
	</li>
	
	
	<li class="nav-item">
		<button class="btn fw-bolder nav-link"
				data-bs-toggle="tab"
				type="button"
				role="tab"
				aria-selected="true"
				
				id="tab_description-tab"
				data-bs-target="#tab_description"
				aria-controls="nav-tab_main"
		>
			<small class="text-uppercase px-3">
				{# Роли группы #}
				{{ 'admin.group.form.tabs.roles'|trans }}
			</small>
		</button>
	</li>
</ul>


<div class="tab-content" id="groupTabContent">
	
	{# ОСНОВНЫЕ НАСТРОЙКИ #}
	<div class="tab-pane fade show active" id="tab_main" role="tabpanel">
		
		<div class="d-flex align-items-start gap-3">
			<div class="d-flex flex-column w-100 gap-3">
				
				{# Основные настройки #}
				{{ include(_self|replace({ "form.html.twig": "_basic.html.twig" })) }}
				
				{# Настройки локали #}
				{{ include(_self|replace({ "form.html.twig": "_trans.html.twig" })) }}
			
			</div>
			
			<div class="d-flex flex-column w-100 gap-3">
				{# Ограничения #}
				{{ include(_self|replace({ "form.html.twig": "_quotum.html.twig"})) }}
			</div>
		</div>
	
	</div>
	
	<div class="tab-pane fade" id="tab_description" role="tabpanel">
		{# Роли группы #}
		{{ include(_self|replace({ "form.html.twig": "_role.html.twig"})) }}
	</div>
</div>
